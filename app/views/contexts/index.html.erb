<div class="bg-gray-50 min-h-screen">
  <main class="container mx-auto px-4 py-8">
    <%= render "contexts/breadcrumbs" %>
    <h2 class="text-3xl font-bold text-gray-800 mb-8">Explore Contexts</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @contexts.each do |context| %>
        <%= link_to context_path(context), class: "block" do %>
          <div class="bg-white text-gray-800 rounded-xl shadow-md hover:shadow-lg hover:bg-red-500 hover:text-white transition duration-300 overflow-hidden border border-gray-200 flex flex-col items-center justify-center p-8 h-64">
            <%= image_tag("icons/#{context.icon}") if context.icon %>
            <h3 class="text-xl font-bold mt-4"><%= context.name %></h3>
          </div>
        <% end %>
      <% end %>
    </div>
  </main>
  <footer class="bg-gray-100 text-center py-6 mt-12">
    <p class="text-sm text-gray-600">&copy; <%= Time.current.year %> JapanLingua. All rights reserved.</p>
  </footer>
</div>
