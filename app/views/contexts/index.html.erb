<div class="bg-gray-50 min-h-screen">
  <main class="container mx-auto px-4 py-8">
    <%= render "contexts/breadcrumbs" %>
    <h2 class="text-3xl font-bold text-gray-800 mb-8">Explore Contexts</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @contexts.each do |context| %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition duration-300 overflow-hidden border border-gray-200">
          <div class="h-48 bg-gradient-to-r from-blue-500 to-indigo-600 flex items-center justify-center">
            <h3 class="text-2xl font-bold text-white"><%= context.name %></h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4"><%= truncate(context.description, length: 100) %></p>
            <div class="flex items-center justify-between mb-4 text-sm">
              <span class="text-gray-500">
                <%= pluralize(context.situations.count, 'situation') %>
              </span>
            </div>
            <div class="flex items-center justify-between mb-6 text-sm font-medium">
              <span class="text-indigo-600">
                <%= pluralize(context.reviews.where("next_review_date <= ?", Time.current.end_of_day).count, 'review') %> due
              </span>
              <span class="text-indigo-600">
                <%= pluralize(context.reviews.count, 'total review') %>
              </span>
            </div>
            <div class="flex justify-between space-x-4">
              <%= link_to context_path(context), class: "flex-1 bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 text-white text-center py-2 px-4 rounded-lg transition duration-300 flex items-center justify-center" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path></svg>
                Dialog
              <% end %>
              <%= link_to context_reviews_path(context_id: context.id), class: "flex-1 bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white text-center py-2 px-4 rounded-lg transition duration-300 flex items-center justify-center" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                Vocabulary
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </main>
  <footer class="bg-gray-100 text-center py-6 mt-12">
    <p class="text-sm text-gray-600">&copy; <%= Time.current.year %> JapanLingua. All rights reserved.</p>
  </footer>
</div>
