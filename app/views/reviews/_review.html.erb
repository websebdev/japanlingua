<%= turbo_frame_tag dom_id(review) do %>
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-2"><%= review.word.content %></h2>
    <p class="mb-2"><%= review.word.reading_hiragana %> (<%= review.word.reading_romaji %>)</p>
    <p class="mb-4"><%= review.word.translation %></p>
    <p class="text-sm text-gray-600 mb-4">Context: <%= review.context.name %></p>
    <div class="flex space-x-4">
      <%= button_to "I know", review_path(review, known: true), method: :patch, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "I don't know", review_path(review, known: false), method: :patch, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>
