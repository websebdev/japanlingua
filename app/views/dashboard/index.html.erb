<div class="bg-gray-100 min-h-screen">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Welcome, <%= Current.user.name %></h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total situations learned -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Situations Learned</h2>
        <p class="text-4xl font-bold text-blue-600"><%= Current.user.situations_learned_count %></p>
      </div>

      <!-- Total vocabulary learned -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Vocabulary Learned</h2>
        <p class="text-4xl font-bold text-green-600"><%= Current.user.vocabulary_learned_count %></p>
      </div>

      <!-- Current daily streak -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Current Streak</h2>
        <p class="text-4xl font-bold text-orange-600"><%= Current.user.current_streak %> days</p>
      </div>

      <!-- Highest daily streak -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Highest Streak</h2>
        <p class="text-4xl font-bold text-purple-600"><%= Current.user.highest_streak %> days</p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
      <div class="flex flex-wrap gap-4">
        <%= link_to contexts_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300" do %>
          <span class="mr-2">ðŸ“š</span> Explore Contexts
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Recent Activity</h2>
      <ul class="space-y-4">
        <% Current.user.recent_activities.each do |activity| %>
          <li class="flex items-center">
            <span class="text-2xl mr-4">ðŸ‡¯ðŸ‡µ</span>
            <div>
              <p class="text-gray-800 font-medium"><%= activity.description %></p>
              <p class="text-sm text-gray-500"><%= time_ago_in_words(activity.created_at) %> ago</p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </main>
</div>
