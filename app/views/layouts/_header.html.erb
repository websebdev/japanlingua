<div data-controller="mobile-menu">
  <header class="bg-red-600 text-white">
    <nav class="container mx-auto px-4 py-3">
      <div class="flex justify-between items-center">
        <%= link_to "JapanLingua", root_path, class: "text-2xl font-bold" %>

        <!-- Mobile menu button -->
        <button data-action="click->mobile-menu#toggle" class="md:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        <!-- Desktop menu -->
        <div class="hidden md:flex md:items-center">
          <%= render "layouts/header_menu_items" %>
        </div>
      </div>

      <!-- Mobile menu -->
      <div data-mobile-menu-target="menu" class="hidden mt-4 md:hidden">
        <%= render "layouts/header_menu_items", mobile: true %>
      </div>
    </nav>
  </header>
</div>
