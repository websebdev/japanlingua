<div class="grid grid-cols-5 gap-4 px-6 py-4 border-b border-gray-200 hover:bg-gray-50 transition duration-300 cursor-pointer" id="<%= dom_id(situation) %>" data-situation-id="<%= situation.id %>" data-edit-url="<%= edit_admin_situation_path(situation) %>">
  <div class="col-span-2 text-sm font-medium text-gray-900"><%= situation.title %></div>
  <div class="col-span-2 text-sm text-gray-500"><%= truncate(situation.description, length: 100) %></div>
  <div class="flex items-center justify-between">
    <%= difficulty_label(situation.difficulty_level) %>
    <div class="flex items-center space-x-2">
      <%= button_to admin_situation_path(situation), method: :delete, class: "text-red-600 hover:text-red-700 transition duration-300", data: { turbo_confirm: "Are you sure you want to delete this situation?" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
