<div class="grid grid-cols-4 gap-4 px-6 py-4 border-b border-gray-200" id="<%= dom_id(situation) %>">
  <div class="text-sm font-medium text-gray-900"><%= situation.title %></div>
  <div class="text-sm text-gray-500"><%= truncate(situation.description, length: 100) %></div>
  <div>
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
      <%= situation.difficulty_level %>
    </span>
  </div>
  <div class="text-sm font-medium">
    <%= link_to "Edit", edit_admin_situation_path(situation), class: "text-indigo-600 hover:text-indigo-900" %>
    <%= button_to "Delete", admin_situation_path(situation), method: :delete, class: "ml-2 text-red-600 hover:text-red-700", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
