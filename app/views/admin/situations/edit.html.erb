<%= turbo_frame_tag @situation do %>
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8">
      <h2 class="text-2xl font-bold mb-4">Edit Situation</h2>
      <%= render "form", situation: @situation %>
      <%= link_to "Cancel", admin_situation_path(@situation), class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
<% end %>
