<div class="px-6 py-4 border-b border-gray-200">
  <div class="rounded px-8 pt-6 pb-8">
    <div class="mb-4 bg-white shadow-md rounded px-8 pt-6 pb-8">
      <h2 class="text-2xl font-bold mb-4">Edit Situation</h2>
      <%= render "form", situation: @situation %>
    </div>
    <div class="mb-4 bg-white shadow-md rounded px-8 pt-6 pb-8">
      <h2 class="text-2xl font-bold mb-4">Sentences</h2>
      <div>
        <%= form_with(model: [:admin, @situation, @situation.sentences.build], local: true) do |form| %>
          <div class="mb-4">
            <%= form.label :content, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :content, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <!--Add character select from Sentence::CHARACTERS constant which is an array of hashes with keys :id, :hiragana_name-->
          <div class="mb-4">
            <%= form.label :character_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.select :character_id, options_for_select(Sentence::CHARACTERS.map { |character| [character[:hiragana_name], character[:id]] }), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="mb-4">
            <%= form.label :audio, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.file_field :audio, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>

          <div class="flex items-center justify-between">
            <%= form.submit "Add Sentence", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>
      </div>
      <div>
        <% @situation.sentences.each do |sentence| %>
          <% next unless sentence.persisted? %>
          <div class="mt-4" data-controller="popover">
            <% sentence.words.each do |word| %>
              <span
                data-action="click->popover#togglePopover"
                data-popover-content-param="<%= word.content %>"
                class="hover:outline hover:outline-1 m-px p-px"
              >
                <%= word.content %>
              </span>
            <% end %>
            <% sentence.words.each do |word| %>
              <div
                data-popover-target="popover"
                id="<%= word.content %>"
                role="tooltip"
                class="absolute z-10 invisible inline-block text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800"
                style="position: absolute;"
              >
                <div class="px-3 py-2 bg-gray-100 border-b border-gray-200 rounded-t-lg dark:border-gray-600 dark:bg-gray-700">
                  <h3 class="font-semibold text-gray-900 dark:text-white"><%= word.content %> (<%= word.reading_hiragana %>)</h3>
                </div>
                <div class="px-3 py-2">
                  <p><%= word.translation %></p>
                  <p class="mt-2"><%= link_to "Add to flashcards", "#", class: "text-blue-500 bg-gray-100 outline p-1" %></p>
                </div>
                <div data-popper-arrow></div>
              </div>
            <% end %>
          </div>
          <div><%= sentence.translation %></div>
        <% end %>
      </div>
    </div>
    <%= link_to "Cancel", admin_situations_path, class: "bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded text-blue-500 hover:text-blue-700" %>
  </div>
</div>
