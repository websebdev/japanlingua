<h1 class="text-2xl font-bold mb-4"><%= @context.name %></h1>
<p class="text-gray-600 mb-6"><%= @context.description %></p>

<h2 class="text-xl font-semibold mb-4">Situations in this context:</h2>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @situations.each do |situation| %>
    <%= link_to edit_admin_situation_path(situation), class: "block p-4 bg-white shadow rounded-lg hover:shadow-md transition duration-300" do %>
      <h3 class="text-lg font-semibold"><%= situation.title %></h3>
      <p class="text-gray-600 mt-2"><%= truncate(situation.description, length: 100) %></p>
    <% end %>
  <% end %>
</div>
