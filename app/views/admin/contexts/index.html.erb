<h1 class="text-2xl font-bold mb-4">Contexts</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @contexts.each do |context| %>
    <%= link_to admin_context_path(context), class: "block p-4 bg-white shadow rounded-lg hover:shadow-md transition duration-300" do %>
      <h2 class="text-xl font-semibold"><%= context.name %></h2>
      <p class="text-gray-600 mt-2"><%= truncate(context.description, length: 100) %></p>
    <% end %>
  <% end %>
</div>
